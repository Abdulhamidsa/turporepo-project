{
  "extends": "../typescript/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "jsx": "react",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@repo/ui/*": ["./src/*"],
      "@repo/lib/utils": ["./src/lib/utils"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
